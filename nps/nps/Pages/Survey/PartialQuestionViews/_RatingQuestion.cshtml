@model nps.Models.SurveyQuestions.RatingQuestion
<div id="question-@Model.Id">
    <p class="quiz-question">@Model.QuestionText</p>
    <div class="quiz-rating-buttons">
        @for (var i = 0; i < Model.MaxValue; i++)
        {
            <button type="button"
                    class="rating-btn"
                    data-value="@(i + 1)"
                    onclick="selectNPS(@(i + 1), 'selectedNps@(Model.Id)', @(Model.Id))">
                @(i + 1)
            </button>
        }
    </div>
    <input type="hidden" id="selectedNps@(Model.Id)" name="selectedNps@(Model.Id)" value=""/>
</div>

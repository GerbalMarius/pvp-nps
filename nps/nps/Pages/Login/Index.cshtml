@page
@model nps.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}
<div>
    <form method="post" class="login-form">
        <h2 class="login-title text-center">Login</h2>

        <div class="form-group">
            <label asp-for="UserInfo.Email"></label>
            <input type="text" asp-for="UserInfo.Email" class="form-control" placeholder="Enter your email" />
        </div>

        <div class="form-group">
            <label asp-for="UserInfo.Password"></label>
            <input type="password" asp-for="UserInfo.Password" class="form-control" placeholder="Enter your password" />
        </div>

        <div class="text-center">
            <button type="submit" class="login-btn">Login</button>
        </div>

    </form>
</div>